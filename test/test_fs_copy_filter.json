{
    "name":"Sample",
    "env":{
        "logLevel":"debug"
    },
    "tasks":[
        {
            "type":"set-var",
            "key":"src",
            "value":"copy-filter-test-src"
        },
        {
            "type":"set-var",
            "key":"dst",
            "value":"copy-filter-test-dst"
        },
        {
            "type":"fs-del",
            "path":"output/${src}"
        },
        {
            "type":"fs-del",
            "path":"output/${dst}"
        },
        {
            "type":"output",
            "target":"fw",
            "path":"output/${src}/test.txt",
            "text":"copy-test"
        },
        {
            "type":"output",
            "target":"fw",
            "path":"output/${src}/test2.txt",
            "text":"copy-test"
        },
        {
            "type":"output",
            "target":"fw",
            "path":"output/${src}/inner/test2.txt",
            "text":"copy-test"
        },
        {
            "type":"fs-copy",
            "src":"output/${src}",
            "dest":"output/${dst}",
            "options":{
                "overwrite":true
            },
            "include":["**/*.txt"],
            "exclude":["test2.txt"]
        }
    ]
}