{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./bin",
    //directory structure of output
    "rootDir": ".",
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
